@using Microsoft.AspNetCore.Http

@{Layout = "../Shared/_Layout.cshtml";
}
@model Blogger.Models.BlogPostViewModel

<div class="container" role="main">
    <div class="page-header">
        <h2>Add Blog Post</h2>
    </div>
    <form asp-controller="Home" asp-action="CreateBlogPost" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-6">

                <div class="form-group">
                    <label for="Post.Title">
                        Title
                    </label>
                    <input class="form-control" asp-for="Post.Title" />
                </div>

                <div class="form-group">
                    <label for="Post.ShortDescription">
                        Description
                    </label>
                    <input class="form-control" asp-for="Post.ShortDescription" />
                </div>


                <div class="form-group">
                    <label for="Post.Content">
                        Content
                    </label>
                    <textarea class="form-control" asp-for="Post.Content" rows="3"></textarea>
                </div>

                <div class="form-group">
                    <label for="Files">
                        Upload Pictures
                    </label>
                    <input type="file" asp-for="Files" />
                </div>

                <div class="form-group">
                    <label for="Post.Posted">
                        Posted
                    </label>
                    <input class="form-control" asp-for="Post.Posted" type="date" />
                </div>

                <div class="form-group">
                    <label for="Post.isAvailable">Available</label>
                    <input type="checkbox" class="form-check-input" asp-for="Post.isAvailable">
                </div>

                <input type="hidden" class="form-control" value=@Context.Session.GetInt32("UserId") name="UserId" />
                <input type="submit" value="Add blog post" class="btn btn-primary btn-sm" />

            </div>
        </div>
    </form>
</div>

