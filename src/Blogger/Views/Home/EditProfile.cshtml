@model Blogger.Models.User
@{Layout = "../Shared/_Layout.cshtml";
}
<div class="container" role="main">
    <div class="page-header">
        <h2>Register</h2>
    </div>

    <form asp-controller="Home" asp-action="ModifyUser">
        <div class="form-row">
            <input type="hidden" value="@Model.UserId" name="UserId" />

            <div class="form-group col-md-6">


                <label for="EmailAddress">Email</label>
                <input type="email" class="form-control" asp-for="EmailAddress" placeholder="Email" required>
            </div>
            <div class="form-group col-md-6">
                <label for="Password">Password</label>
                <input type="password" class="form-control" asp-for="Password" placeholder="Password" required>
            </div>
        </div>
        <div class="form-group col-md-4">
            <label for="FirstName">First Name</label>
            <input class="form-control" asp-for="FirstName" />
        </div>
        <div class="form-group col-md-4">
            <label for="LastName">Last Name</label>
            <input class="form-control" asp-for="LastName" />
        </div>
        <div class="form-group col-md-4">
            <label for="DateOfBirth">Date Of Birth</label>
            <input class="form-control" asp-for="DateOfBirth" />
        </div>
        <div class="form-row">

            <div class="form-group col-md-12">
                <label for="Address">Address</label>
                <input type="text" class="form-control" asp-for="Address" placeholder="1234 Main St">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="City">City</label>
                <input type="text" class="form-control" asp-for="City">
            </div>
            <div class="form-group col-md-4">
                <label for="Country">Country</label>
                <input type="text" class="form-control" asp-for="Country">
            </div>
            <div class="form-group col-md-2">
                <label for="PostalCode">Postal</label>
                <input type="text" class="form-control" asp-for="PostalCode">
            </div>
            <div class="form-group col-md-2">
                <label for="RoleId">Role</label>
                <input class="form-control" asp-for="RoleId " min=1 max=2 />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">

                <button type="submit" class="btn btn-primary btn-sm">Submit Changes</button>
            </div>
        </div>
    </form>


</div>
