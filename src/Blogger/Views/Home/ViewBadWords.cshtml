@using Microsoft.AspNetCore.Http
@model List<Blogger.Models.BadWord>

@{Layout = "../Shared/_Layout.cshtml";
}



<div class="container" role="main">
    <div class="page-header">
        <h2>Word listing</h2>
    </div>
    <form asp-controller="Home" asp-action="CreateBadWord">


        <div class="form-group col-md-2">
            <label for="Word">Add a banned word</label>
            <input class="form-control" name="Word" />
        </div>
       

            <input type="submit" value="Add word" class="btn btn-success btn-sm" />
            
</form>

</div>
    <div class="container">
        <div class="row">
            
            <div class="col-md-6">
                @if (Model.Count == 0)
                {
                }
                else
                {
                    <ul class="list-group">

                        @foreach (var item in Model)
                {


                            <li class="list-group-item">
                                @item.Word    

                                <span class="pull-right">
                                    <a  class="btn btn-danger btn-sm" asp-controller="Home" asp-action="DeleteBadWord" asp-route-id="@item.BadWordId">Delete</a>

                                </span>
                            </li>


                        }
                    </ul>
                }

            </div>
            <div class="col-md-6">
             
            </div>
        </div>
      
    </div>

